# =============================================================================
# LEADSFYNDER PRODUCTION ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env.production for production deployment

# Application
NODE_ENV=production
PORT=8000
FRONTEND_URL=https://your-frontend-domain.vercel.app
APP_NAME=LeadsFynder
APP_VERSION=1.0.0

# Database - SUPABASE (Production)
# Replace with your actual Supabase production connection string
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres

# Supabase Configuration
SUPABASE_URL=https://[YOUR-PROJECT-REF].supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# JWT Authentication
JWT_SECRET=your-super-secure-jwt-secret-for-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-super-secure-refresh-secret
JWT_REFRESH_EXPIRES_IN=30d

# Email Configuration (Production)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-production-email@gmail.com
SMTP_PASS=your-production-app-password
SMTP_SECURE=false
FROM_EMAIL=noreply@leadsfynder.com
FROM_NAME=LeadsFynder

# Payment Gateways (Production)
# Stripe
STRIPE_SECRET_KEY=sk_live_your_live_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_live_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_live_webhook_secret

# PayPal
PAYPAL_CLIENT_ID=your_live_paypal_client_id
PAYPAL_CLIENT_SECRET=your_live_paypal_client_secret
PAYPAL_MODE=live

# Razorpay
RAZORPAY_KEY_ID=your_live_razorpay_key_id
RAZORPAY_KEY_SECRET=your_live_razorpay_key_secret

# External APIs
# Google Maps
GOOGLE_MAPS_API_KEY=your_production_google_maps_api_key

# Email Verification
NEVERBOUNCE_API_KEY=your_production_neverbounce_api_key
DEBOUNCE_API_KEY=your_production_debounce_api_key

# WhatsApp Integration
FLEXA_WAPI_API_KEY=your_production_flexa_wapi_api_key
FLEXA_WAPI_BASE_URL=https://api.flexa.com

# OAuth Providers
# Google
GOOGLE_CLIENT_ID=your_production_google_client_id
GOOGLE_CLIENT_SECRET=your_production_google_client_secret
GOOGLE_CALLBACK_URL=https://your-frontend-domain.vercel.app/auth/google/callback

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your_production_session_secret
CORS_ORIGIN=https://your-frontend-domain.vercel.app

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email Sending Limits
DAILY_EMAIL_LIMIT=1000
HOURLY_EMAIL_LIMIT=100
EMAIL_BATCH_SIZE=50

# Lead Generation Limits
DAILY_LEAD_LIMIT=500
HOURLY_LEAD_LIMIT=50

# Verification Credits
DEFAULT_VERIFICATION_CREDITS=100
VERIFICATION_CREDITS_PER_MONTH=1000

# Production Features
ENABLE_COMPRESSION=true
ENABLE_CACHE=true
CACHE_TTL=3600

# Feature Flags
ENABLE_AI_PERSONALIZATION=false
ENABLE_MULTI_CHANNEL=false
ENABLE_REPORTS_SUITE=false
ENABLE_AGENCY_FEATURES=false

# Admin Configuration
ADMIN_EMAIL=admin@leadsfynder.com
ADMIN_PASSWORD=your_secure_admin_password
SUPER_ADMIN_EMAIL=superadmin@leadsfynder.com
SUPER_ADMIN_PASSWORD=your_secure_super_admin_password
