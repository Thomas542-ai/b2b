# =============================================================================  
# LEADSFYNDER ENVIRONMENT CONFIGURATION - SUPABASE ONLY  
# =============================================================================  
  
# Application  
NODE_ENV=development  
PORT=8000  
FRONTEND_URL=http://localhost:3000  
APP_NAME=LeadsFynder  
APP_VERSION=1.0.0  
  
# Database - Supabase Only  
# All database operations use Supabase directly  
# No local PostgreSQL configuration needed 
  
# JWT Authentication  
JWT_SECRET=your-super-secret-jwt-key-change-in-production  
JWT_EXPIRES_IN=7d  
JWT_REFRESH_SECRET=your-refresh-secret-key  
JWT_REFRESH_EXPIRES_IN=30d  
  
# Email Configuration  
SMTP_HOST=smtp.gmail.com  
SMTP_PORT=587  
SMTP_USER=your-email@gmail.com  
SMTP_PASS=your-app-password  
SMTP_SECURE=false  
FROM_EMAIL=noreply@leadsfynder.com  
FROM_NAME=LeadsFynder 
